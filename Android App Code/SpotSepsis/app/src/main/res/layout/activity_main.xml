<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/main_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/actionBarLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Sanjay Kumar"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:scaleType="fitEnd"
                    android:src="@drawable/setting_icon"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topOptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="?actionBarSize"
            android:layout_marginEnd="24dp"
            android:paddingTop="10dp"
            android:baselineAligned="false"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/homeTestLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/home_test"
                    android:padding="15dp"
                    android:elevation="15dp"
                    android:backgroundTint="#fff"
                    android:background="@drawable/circle_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Test"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/poppins_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We have got features for al types of test."
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="0.8"
                    android:gravity="center"
                    android:textColor="#9E9E9E"
                    android:fontFamily="@font/poppins_regular"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/scanLabReportLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/visits_icon"
                    android:padding="15dp"
                    android:backgroundTint="#fff"
                    android:background="@drawable/circle_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan Lab Report"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/poppins_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We keep your reports updated and secured"
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="0.8"
                    android:gravity="center"
                    android:textColor="#9E9E9E"
                    android:fontFamily="@font/poppins_regular"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recommendationsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/recommendations_icon"
                    android:padding="15dp"
                    android:backgroundTint="#fff"
                    android:background="@drawable/circle_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommendation"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/poppins_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We keep you updated with recommendations."
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="0.8"
                    android:gravity="center"
                    android:textColor="#9E9E9E"
                    android:fontFamily="@font/poppins_regular"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/sepsisTrendCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            app:cardElevation="1dp"
            android:elevation="20dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topOptionsLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="10dp"
                        android:paddingStart="15dp"
                        android:text="Sepsis Trend"
                        android:textColor="#757575"
                        android:textSize="15sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/sepsisTrendChartView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/recentVisitsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sepsisTrendCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recent Visits"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show more"
                    android:paddingEnd="15dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <include layout="@layout/recent_visits_layout"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp"
            android:elevation="20dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="14dp"
            app:cardElevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recentVisitsLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="10dp"
                        android:paddingStart="15dp"
                        android:text="Parameters Trend"
                        android:textColor="#757575"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/parametersSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingEnd="10dp" />

                </LinearLayout>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/parametersTrendChartView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>